<%- include('partials/log_header') -%>

<head>
  
  <title>Memwa FIND</title>
  <link href="node_modules/cloudinary-video-player/dist/cld-video-player.min.css" rel="stylesheet">
  <link href="https://unpkg.com/cloudinary-video-player@1.9.0/dist/cld-video-player.min.css" rel="stylesheet">
</head>
<section>
    <div class="px-4 py-5 my-5 text-center">
        <img class="d-block mx-auto mb-4" src="/imgs/logo.svg" alt="Memwa" width="120" height="120">
        <h1 class="display-5 fw-bold">Memwa FIND</h1>
        <h5>Find and Browse through stories</h5> 
        <h6>Browse through <b>2,100</b> stories from <b>69</b> countries</h6>
      </div>
      <div class="text-right">
      <div class="search-container">
          <div class="input-group mb-3">
            <div class="form-outline col-lg-10 mx-auto">
              <form class="search" action="/find" method="GET">
                <input placeholder="Search for stories or people....." type="text" id="search-input" class="bar" name="searchTerm" value="<%=searchTerm%>"/>
                <button type="submit">Find</button>
              <!-- <button id="search-button" type="button" class="btn btn-primary" >
                <i class="fas fa-search"></i>
              </button> -->
              </form>
            </div>   
          </div> 
          
          <div class="form-outline col-lg-10 mx-auto">
            <% if(posts.length > 0 && searchTerm != undefined) {%>
              <ul>
                <% posts.forEach(post => { %>
                <a href="/post/<%= post.id%>"><li><%=post.title %></li></a>
              <% }) %>
              </ul>
              <%}else {%>
                <h3>No Results</h3>
              <% } %>
          </div>
      </div>
      
    </div>
    <div>
    </div>
    <!-- <div id="search-results"></div> -->
  
</section>

